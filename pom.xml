<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.0.5</version>
        <relativePath/>
    </parent>

    <groupId>com.xh</groupId>
    <artifactId>xh-bms-backend</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <name>xh-bms-backend</name>
    <description>晓寒管理系统后端</description>

    <properties>
        <!--    基础版本    -->
        <xh-bms.version>0.0.1-SNAPSHOT</xh-bms.version>
    </properties>

    <modules>
        <module>common</module>
        <module>system</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <!--    定义依赖的默认版本    -->
        <dependencies>
            <!-- 升级修复安全漏洞 -->
            <dependency>
                <groupId>org.yaml</groupId>
                <artifactId>snakeyaml</artifactId>
                <version>2.0</version>
            </dependency>
            <dependency>
                <groupId>com.xh</groupId>
                <artifactId>common-core</artifactId>
                <version>${xh-bms.version}</version>
            </dependency>
            <dependency>
                <groupId>com.xh</groupId>
                <artifactId>common-jdbc</artifactId>
                <version>${xh-bms.version}</version>
            </dependency>
            <dependency>
                <groupId>com.xh</groupId>
                <artifactId>common-log</artifactId>
                <version>${xh-bms.version}</version>
            </dependency>
            <dependency>
                <groupId>com.xh</groupId>
                <artifactId>common-swagger</artifactId>
                <version>${xh-bms.version}</version>
            </dependency>
            <dependency>
                <groupId>com.xh</groupId>
                <artifactId>system-client</artifactId>
                <version>${xh-bms.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <!--    如需发布到仓库，这里配置选项    -->

    </distributionManagement>

    <build>
        <!--  全局通用配置    -->
        <!--  参考文档 https://docs.spring.io/spring-boot/docs/3.0.5/maven-plugin/reference/htmlsingle/#packaging      -->
        <finalName>sxh-bms-${project.artifactId}</finalName>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <configuration>
                        <image>
<!--                            <builder>${project.basedir}/docker/Dockerfile</builder>-->
<!--                            <runImage>${project.basedir}/docker/Run</runImage>-->
                            <name>xh-bms-${project.artifactId}</name>
                            <env>
                                <!-- jdk版本-->
                                <BP_JVM_VERSION>17</BP_JVM_VERSION>
                            </env>
                            <tags>
                                <tag>latest</tag>
<!--                                <tag>${project.version}</tag>-->
                            </tags>

                            <!-- 如果要推送到镜像库，设为true -->
                            <!-- <publish>true</publish> -->
                        </image>
                        <docker>
                            <!-- 镜像库账号密码 -->
                            <publishRegistry>
                                <username>user</username>
                                <password>secret</password>
                            </publishRegistry>
                        </docker>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>repackage</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>build-image</id>
                            <goals>
                                <goal>build-image</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
